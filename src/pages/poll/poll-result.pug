                .info-item.colors
                  .bar(style="width:calc(45% * 1.5)") 45&hairsp;%
                  .caption 25
                .info-item.colors
                  .bar(style="width:calc(13% * 1.5)") 13&hairsp;%
                  .caption 7
                .info-item.colors
                  .bar(style="width:calc(2% * 1.5)") 2&hairsp;%
                  .caption 1
            .orb__grid-cell
              p График движения
